#
# Launches the Rio UI
#

rioVersion=@rioV@

if [ -z "$RIO_HOME" ] ; then
    rioHomeDir="$(cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
    path_to_jar="$rioHomeDir/lib/rio-ui-$rioVersion.jar"
    if [ ! -e "$path_to_jar" ] ; then
        echo "Don't know how to start Rio UI from [$rioHomeDir]"
        exit 1
    fi
    RIO_HOME="$rioHomeDir"
else
    path_to_jar="$RIO_HOME/lib/rio-ui-$rioVersion.jar"
fi

# Check for running on OS/X
opSys=`uname -s`
if [ $opSys = "Darwin" ] ; then
    java -Drio.home=$RIO_HOME -Dorg.rioproject.keyStore=$RIO_HOME/config/security/rio-cert.ks -Djava.security.policy=$RIO_HOME/policy/policy.all -Djava.rmi.server.useCodebaseOnly=false -Djava.protocol.handler.pkgs=org.rioproject.url -Xdock:name="Rio" -jar $path_to_jar $*
else
    java -Drio.home=$RIO_HOME -Dorg.rioproject.keyStore=$RIO_HOME/config/security/rio-cert.ks -Djava.security.policy=$RIO_HOME/policy/policy.all -Djava.rmi.server.useCodebaseOnly=false -Djava.protocol.handler.pkgs=org.rioproject.url -jar $path_to_jar  $*
fi

