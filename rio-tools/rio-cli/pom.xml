<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" 
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
       <artifactId>main</artifactId>
       <groupId>org.rioproject</groupId>
       <version>5.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <artifactId>rio-cli</artifactId>
    <name>Module :: Rio Command Line Interface</name>
    <packaging>jar</packaging>
    
    <dependencies>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-lib</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject.cybernode</groupId>
            <artifactId>cybernode-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject.monitor</groupId>
            <artifactId>monitor-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>webster</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>net.jini.lookup</groupId>
            <artifactId>jmx-lookup</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
  
    <build>
	    <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>org.rioproject.cybernode:cybernode-api</include>
                                    <include>org.rioproject.monitor:monitor-api</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <manifestEntries>
                                        <Main-Class>org.rioproject.tools.cli.CLI</Main-Class>
                                        <Implementation-Title>Rio Project</Implementation-Title>
                                        <Implementation-Version>${project.version}</Implementation-Version>
                                        <Rio-Version>${project.version}</Rio-Version>
                                        <Rio-Build>${maven.build.timestamp}</Rio-Build>
                                        <Class-Path>rio-start.jar rio-lib.jar webster.jar groovy-all.jar</Class-Path>
                                    </manifestEntries>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
	    </plugins>
    </build>

</project>
